<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/studentmanagerroot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:background="@color/ColorSecondary"
    android:backgroundTint="#F0F0F0"
    android:translationZ="3dp"
    tools:context=".AddStudent_Fragment">

    <!-- TODO: Update blank fragment layout -->
    <!-- fees -->
    <!-- date of birth -->
    <!-- date of joining -->
    <!-- date of leaving -->
    <!-- course -->
    <!-- batch -->

    <TextView
        android:id="@+id/titlecard"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:background="@color/colorcommonbackground"
        android:gravity="center"
        android:hint="Fill The Form"
        android:textColorHint="#3E0101"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/imageview"
        android:layout_width="114dp"
        android:layout_height="105dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/mediumsizedcontainer"
        android:backgroundTint="#F8F7F7"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titlecard">

        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Select an Image" />

        <ImageView
            android:id="@+id/imageholder"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="10dp"
            android:background="@drawable/plus_solid"
            android:backgroundTint="@color/black" />
    </LinearLayout>

    <EditText
        android:id="@+id/emailinput"
        android:layout_width="250dp"
        android:layout_height="35dp"

        android:layout_marginStart="24dp"
        android:background="@color/Accent_green"
        android:backgroundTint="@color/white"
        android:hint="Enter Email"
        android:padding="0dp"
        android:paddingStart="10dp"
        android:textColorHint="#020000"
        android:translationZ="3dp"
        app:layout_constraintBottom_toBottomOf="@id/imageview"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageview"
        app:layout_constraintVertical_bias="0.866" />

    <EditText
        android:id="@+id/nameinput"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:background="@color/Accent_green"
        android:backgroundTint="@color/white"
        android:hint="Enter name"
        android:inputType="textEmailAddress"
        android:padding="7dp"
        android:textColorHint="#01111F"
        android:translationZ="3dp"
        app:layout_constraintBottom_toBottomOf="@id/imageview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailinput"
        app:layout_constraintTop_toTopOf="@id/imageview"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/phoneinput"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:background="@color/ColorBG"
        android:hint="Enter Phone no"
        android:inputType="number"
        android:padding="0dp"
        android:paddingStart="10dp"
        android:textColorHint="#01111F"


        android:translationZ="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emailinput" />

    <EditText
        android:id="@+id/addressinput"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:background="@color/ColorBG"
        android:hint="enter Address"
        android:padding="0dp"
        android:paddingStart="10dp"
        android:textColorHint="#01111F"
        android:translationZ="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneinput" />


    <EditText
        android:id="@+id/aadharinput"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:background="@color/ColorBG"
        android:hint="Enter Aadhar no."
        android:padding="0dp"
        android:paddingStart="10dp"
        android:textColorHint="#01111F"
        android:translationZ="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addressinput" />


    <EditText
        android:id="@+id/fathernameinput"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:background="@color/ColorBG"
        android:hint="Enter Father's name"
        android:padding="0dp"
        android:paddingStart="10dp"
        android:textColorHint="#01111F"
        android:translationZ="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aadharinput" />

    <EditText
        android:id="@+id/mothernameinput"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:background="@color/ColorBG"
        android:hint="Enter Mother's name"
        android:padding="0dp"
        android:paddingStart="10dp"
        android:textColorHint="#01111F"
        android:translationZ="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fathernameinput" />

    <EditText
        android:id="@+id/tpainput"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:background="@color/ColorBG"
        android:hint="Total Payable Fees"
        android:inputType="number"
        android:padding="0dp"
        android:paddingStart="10dp"
        android:shadowColor="#9B2424"
        android:shadowDx="56"
        android:shadowDy="44"
        android:textColorHint="#01111F"
        android:translationZ="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mothernameinput" />
    <!-- input total payable fees -->


    <Button
        app:layout_constraintTop_toTopOf="@id/titlecard"
        app:layout_constraintBottom_toBottomOf="@id/titlecard"
        android:id="@+id/savedetails"
        android:layout_width="235dp"
        android:layout_height="55dp"
        android:backgroundTint="@color/white"
        android:elevation="20dp"
        android:hint="Save Details"
        android:padding="0dp"
        android:textColorHint="#000"
        android:translationZ="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="610dp" />


</androidx.constraintlayout.widget.ConstraintLayout>