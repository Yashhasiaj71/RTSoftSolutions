<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/ColorBG"
    tools:context=".AdminHome">


    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
  android:layout_gravity="top|center_horizontal"
        android:layout_marginBottom="220dp"
        android:backgroundTint="#8C9FA6"
        app:cardCornerRadius="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Course Name"
            android:textSize="24sp" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/ColorSecondary"
        android:layout_marginTop="250dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/round"
            android:src="@drawable/teacher" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:background="@drawable/round"
            android:src="@drawable/teacher" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:background="@drawable/round"
            android:src="@drawable/teacher" />

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/round"
            android:scaleType="fitXY"
            android:src="@drawable/plus_solid" />
    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/messegeBox"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="380dp"
        android:backgroundTint="@color/ColorSecondary"
        app:cardCornerRadius="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Add a note , messege" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/FeesCox"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:layout_marginTop="380dp"
        app:cardCornerRadius="24dp"
        android:backgroundTint="@color/ColorSecondary"
        android:layout_marginLeft="250dp"
        >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/indian_rupee_sign_solid_full"
            android:scaleType="fitXY"
            android:layout_marginTop="10dp"
            android:background="@color/Transperent"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Manage Fees" />
    </androidx.cardview.widget.CardView>

    <GridLayout
        android:id="@+id/BirthdayInfo"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_rectangle">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/cake_anim" />

      <LinearLayout
          android:layout_height="match_parent"
          android:layout_width="200dp"
          android:orientation="vertical"
          >
          <TextView
              android:id="@+id/BirthdayText"
              android:layout_width="190dp"
              android:layout_height="wrap_content"
              android:text="its student1's birthday
Wish Them on :-"
              android:textSize="20sp" />


          <ImageButton
              android:id="@+id/WhatsappButton"
              android:layout_height="80dp"
              android:layout_width="80dp"
              android:layout_gravity="bottom"
              android:scaleType="fitXY"
              android:background="@color/Transperent"
              android:layout_marginEnd="20dp"
              android:src="@drawable/whatsapp_logo"
              android:layout_marginStart="50dp"

              />
      </LinearLayout>

    </GridLayout>

</FrameLayout>