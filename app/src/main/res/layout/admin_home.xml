<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorBG"
    tools:context=".Fragments.AdminHome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header banner with rotating course image -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/CourseImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/java" />
        </androidx.cardview.widget.CardView>

        <!-- Quick actions grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true"
            android:layout_marginBottom="16dp">

            <!-- Student Manager -->
            <androidx.cardview.widget.CardView
                android:id="@+id/CardStudentManager"
                android:layout_width="0dp"
                android:layout_height="140dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/StudentManagerButton"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:background="@color/Transperent"
                        android:src="@drawable/user_regular_full"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Student Manager"
                        android:textStyle="bold"
                        android:textSize="14sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Fees -->
            <androidx.cardview.widget.CardView
                android:id="@+id/FeesBox"
                android:layout_width="0dp"
                android:layout_height="140dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/FeesButton"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:background="@color/Transperent"
                        android:src="@drawable/indian_rupee_sign_solid_full"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manage Fees"
                        android:textStyle="bold"
                        android:textSize="14sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Attendance -->
            <androidx.cardview.widget.CardView
                android:id="@+id/CardAttendance"
                android:layout_width="0dp"
                android:layout_height="140dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/AttendanceButton"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:background="@color/Transperent"
                        android:src="@drawable/chart_bar_regular_full_green"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Attendance"
                        android:textStyle="bold"
                        android:textSize="14sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Reports -->
            <androidx.cardview.widget.CardView
                android:id="@+id/CardReports"
                android:layout_width="0dp"
                android:layout_height="140dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/ReportsButton"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:background="@color/Transperent"
                        android:src="@drawable/chart_bar_regular_full"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reports"
                        android:textStyle="bold"
                        android:textSize="14sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>

        <!-- Birthday reminder card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/BirthdayCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:backgroundTint="@color/white"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/BirthdayContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/cake_anim" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="16dp">

                        <TextView
                            android:id="@+id/BirthdayText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wish students on their birthday"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tap to send birthday wishes"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <!-- Single WhatsApp button (for single birthday) -->
                    <ImageButton
                        android:id="@+id/WhatsappButton"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/whatsapp_button_background"
                        android:src="@drawable/whatsapp_logo"
                        android:scaleType="fitCenter"
                        android:padding="12dp"
                        android:contentDescription="Send birthday wish" />

                </LinearLayout>

                <!-- Multiple WhatsApp buttons container (for multiple birthdays) -->
                <LinearLayout
                    android:id="@+id/MultipleWhatsAppContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:visibility="gone" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>